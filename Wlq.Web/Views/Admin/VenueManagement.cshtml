@{
	Layout = "~/Views/Admin/_Layout.cshtml";
}


@model IEnumerable<Wlq.Domain.GroupInfo>

<h4 class="form-tt">场地管理</h4>
<div class="formbody">
@if (Model == null || Model.Count() == 0)
{
	 <span>没有组织信息，无法配置场馆</span>
}
else
{
	 <div class="quanxian-tt">
		<span>所属部门或组织：</span>
		<select id="department_selector" class="select-2">
		@foreach (var group in Model)
		{
			<option value="@group.Id">@group.Name</option>
		}
		</select>

		@*<a id="find_venuegroup" href="javascript:;" class="btn-3">查询场馆信息</a>*@
		<a id="add_venue_group" href="@Url.Action("VenueGroup", "Admin", new { Id = 0 })" class="btn-3">+新增场馆</a>
	</div>
	<div id="venuegroup_list" class="quanxian-tt"></div>
}
</div>
<div class="formfooter"></div>

@section scripts
{
	<script type="text/javascript">
		$(document).ready(function () {
			selected_left_menu(4);

			bind_venuegroup_list();
		});

		$("#department_selector").bind("change", function () {
			bind_venuegroup_list();
		});

		function bind_venuegroup_list() {
			var groupId = $("#department_selector").val();

			if (groupId > 0) {
				$.get("/Admin/GetVenueGroupsByGroup/" + groupId, function (data) {
					var result = '';
					if (data.length > 0) {
						result += "<table class='list-tbl'>";
						result += "<thead><tr><th>名称</th><th>场馆类型</th><th>操作</th></tr></thead><tbody>";

						for (var i in data) {
							result += "<tr><td>" + data[i].Name + "</td><td>" + data[i].VenueType + "</td><td><a href='/Admin/VenueGroup/" + data[i].Id + "'>编辑</a>&nbsp;&nbsp;<a href='javascript:;' onclick='remove_venuegroup(" + data[i].Id + ");'>删除</a></td></tr>";
						}

						result += "</tbody></table>";
					}
					else {
						result = "<span>未添加任何场馆</span>";
					}

					$("#venuegroup_list").html(result);
				});
			}
		}

		function remove_venuegroup(venuegroupId) {
			if (!confirm("确定删除该场馆?"))
				return false;

			$.ajax({
				type: "POST",
				dataType: 'json',
				url: "/Admin/RemoveVenueGroup",
				data: {
					'venueGroupId': venuegroupId
				},
				success: function (r, status) {
					if (r.Success) {
						alert("删除成功");
						bind_venuegroup_list();
					}
					else {
						alert("删除失败");
					}
				}
			});
		}
	</script>
}