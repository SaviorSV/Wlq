@{
	Layout = "~/Views/Admin/_Layout.cshtml";
}

@model IEnumerable<Wlq.Domain.GroupInfo>

<h4 class="form-tt">组织管理</h4>
<div class="formbody">
@if (Model == null || Model.Count() == 0)
{
	 <span>非部门管理员，无法创建组织</span>
}
else
{
	 <div class="quanxian-tt">
		<span>部门：</span>
		<select id="department_selector" class="select-2">
		@foreach (var group in Model)
		{
			<option value="@group.Id">@group.Name</option>
		}
		</select>

		<a id="find_group" href="javascript:;" class="btn-3">查询下级组织</a>
		<a id="add_group" href="javascript:;" class="btn-3">+新增组织</a>
	</div>
	<div id="group_list" class="quanxian-tt"></div>
}
</div>
<div class="formfooter"></div>

@section scripts
{
	<script type="text/javascript">
		selected_left_menu(2);

		$("#find_group").bind("click", function () {
			bind_group_list();
		});

		$("#add_group").bind("click", function () {
			var groupId = $("#department_selector").val();

			window.location = "/Admin/Group?groupId=0&parentGroupId=" + groupId;
		});

		function bind_group_list() {
			var groupId = $("#department_selector").val();

			if (groupId > 0) {
				$.get("/Admin/GetGroupsByParent/" + groupId, function (data) {
					var result = '';
					if (data.length > 0) {
						result += "<table class='list-tbl'>";
						result += "<thead><tr><th>名称</th><th>操作</th></tr></thead><tbody>";

						for (var i in data) {
							result += "<tr><td>" + data[i].Name + "</td><td><a href='/Admin/Group?groupId=" + data[i].Id + "&parentGroupId=" + groupId + "'>编辑</a>&nbsp;&nbsp;<a href='javascript:remove_group(" + data[i].Id + ");'>删除</a></td></tr>";
						}

						result += "</tbody></table>";
					}
					else {
						result = "<span>未创建任何组织</span>";
					}

					$("#group_list").html(result);
				});
			}
		}

		function remove_group(groupId) {
			if (!confirm("确定删除该组织?"))
				return false;

			$.ajax({
				type: "POST",
				dataType: 'json',
				url: "/Admin/RemoveGroup",
				data: {
					'groupId': groupId
				},
				success: function (r, status) {
					if (r.Success) {
						alert("删除成功");
						bind_group_list();
					}
					else {
						alert("删除失败");
					}
				}
			});
		}

	</script>
}