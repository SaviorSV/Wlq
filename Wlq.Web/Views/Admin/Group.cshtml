@{
	Layout = "~/Views/Admin/_Layout.cshtml";
}

@model Wlq.Domain.GroupInfo

<h4 class="form-tt">组织管理</h4>
<div class="formbody">
	 <ul>
		<li><label>所属部门：</label><label>@ViewBag.ParentGroupName</label></li>
		<li><label>组织名称：</label><input type="text" value="@Model.Name" /></li>
		<li>
			<label>头　　像：</label>
			<input type="file" /><br />
		@if (string.IsNullOrWhiteSpace(Model.Logo))
		{
			<img src="/Content/images/other/ico-1.png" alt="logo" />
		}
		else
		{
			<img src="@Model.Logo" alt="logo" />
		}
		</li>
	 </ul>
	 <a id="save_group" href="#" class="btn-3">保　存</a>
	 <a href="/Admin/GroupManagement" class="btn-3">返　回</a>
</div>
<div class="formfooter"></div>

@section scripts
{
	<script type="text/javascript">
		selected_left_menu(2);
	</script>
}