@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="r-subtitle">修改密码</h4>
@using (Html.BeginForm("ChangePassword", "User", FormMethod.Post, new { id = "change_password_form" }))
{
<ul class="useredit-list1">
	<li>
		<label class="btn-2">原 密 码</label>
		<input name="OldPassword" type="password" />
	</li>
	<li>
		<label class="btn-2">新 密 码</label>
		<input name="NewPassword" type="password" />
	</li>
	<li>
		<label class="btn-2">确认密码</label>
		<input name="NewPasswordVerify" type="password" />
	</li>
</ul>
}
<div class="btnbox">	<a id="btn_change_password" href="javascript:;" class="btn-1" style="width:200px;">确 定</a></div>@section scripts
{
	<script type="text/javascript">
		$("#btn_change_password").bind("click", function () {
			$("#change_password_form").submit();
		});
	</script>
}